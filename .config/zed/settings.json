{
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "",
      },
    },
  },
  "icon_theme": "Phosphor Icons Theme",
  "disable_ai": false,
  "features": {
    "edit_prediction_provider": "zed",
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
  },
  "base_keymap": "VSCode",
  "theme": "Dracula Pro (Van Helsing)",
  "buffer_font_family": "BerkeleyMono Nerd Font Mono",
  "ui_font_family": "BerkeleyMono Nerd Font Mono",
  "buffer_line_height": {
    "custom": 1.5,
  },
  "buffer_font_size": 16,
  "terminal": {
    "font_family": "BerkeleyMono Nerd Font Mono",
    "font_size": 16,
    "line_height": {
      "custom": 1.5,
    },
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
  },
  "scrollbar": {
    "show": "never",
  },
  "tab_bar": {
    "show": false,
  },
  "vertical_scroll_margin": 0,
  "cursor_blink": false,
  "relative_line_numbers": "enabled",
  "code_actions_on_format": {
    "source.fixAll.trunk": true,
    "source.organizeImports.trunk": true,
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
    },
    "JavaScript": {
      "language_servers": ["vtsls"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "TypeScript": {
      "language_servers": ["vtsls"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "TSX": {
      "language_servers": ["vtsls"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy",
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial",
          },
          "closureReturnTypeHints": {
            "enable": "always",
          },
        },
      },
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className"],
        "tailwindCSS": {
          "experimental": {
            "classRegex": [
              ["([\"'`][^\"'`]*.*?[\"'`])", "[\"'`]([^\"'`]*).*?[\"'`]"],
            ],
          },
        },
      },
    },
    "vtsls": {
      "settings": {
        "complete_function_calls": false,
        "typescript": {
          "updateImportsOnFileMove": { "enabled": "always" },
          "preferences": {
            "importModuleSpecifier": "non-relative",
            "importModuleSpecifierEnding": "minimal",
          },
        },
      },
      "initialization_options": {
        "typescript": {
          "tsserver": {
            "experimental": {
              "enableProjectDiagnostics": true,
            },
          },
        },
      },
    },
    "basedpyright": {
      "settings": {
        "diagnosticMode": "workspace",
        "python.analysis.useLibraryCodeForTypes": true,
        "basedpyright.analysis.useLibraryCodeForTypes": true,
      },
      "initialization_options": {
        "useLibraryCodeForTypes": true,
      },
    },
    "ruff": {
      "settings": {
        "configuration": ".trunk/configs/ruff.toml",
      },
    },
  },
}
