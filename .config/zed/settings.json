{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "features": {
    "inline_completion_provider": "copilot"
  },
  "theme": "Kanagawa",
  "buffer_font_family": "Berkeley Mono",
  "ui_font_family": "Berkeley Mono",
  "buffer_line_height": {
    "custom": 1.5
  },
  "buffer_font_size": 16,
  "terminal": {
    "font_family": "BerkeleyMono Nerd Font Mono",
    "font_size": 16,
    "line_height": {
      "custom": 1.5
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "vim_mode": true,
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },
  "vertical_scroll_margin": 0,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "format_on_save": "on",
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial"
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className"]
      }
    },
    "vtsls": {
      "initialization_options": {
        "typescript": {
          "tsserver": {
            "experimental": {
              "enableProjectDiagnostics": true
            }
          }
        }
      }
    },
    "languages": {
      "JavaScript": {
        "code_actions_on_format": {
          "source.fixAll.eslint": true
        },
        "format_on_save": {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"]
          }
        }
      },
      "TSX": {
        "code_actions_on_format": {
          "source.fixAll.eslint": true
        },
        "format_on_save": {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"]
          }
        }
      },
      "TypeScript": {
        "code_actions_on_format": {
          "source.fixAll.eslint": true
        },
        "format_on_save": {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"]
          }
        }
      }
    },
    "vim": {
      "use_system_clipboard": "always",
      "use_multiline_find": true
    }
  }
}
